@model Ator

@{
 ViewData["Title"] = "Deletar Ator";
}


<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1 class="text-center text-light">Deletar Ator @Model.NomeCompleto</h1>
            </p>
            <div class="row">
                   <div class="col-md-8 offset-2">
                    
                    <div class="form-group">
                        <label asp-for="NomeCompleto" class="control-label text-light">Nome</label>
                        <input asp-for="NomeCompleto" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label text-light">Biografia</label>
                        <input asp-for="Bio" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoPerfilURL" class="control-label text-light">Foto</label>
                        <input asp-for="FotoPerfilURL" class="form-control" />
                    </div>
                    


                    <div class="form-group">
                        <form asp-action="ConfirmarDeletar">
                        <input type="hidden"  asp-for="@Model.Id">
                        <input type="submit" value="Deletar" class="btn btn-outline-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>