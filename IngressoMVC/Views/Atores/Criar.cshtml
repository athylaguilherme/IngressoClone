@model IngressoMVC.Models.ViewModels.Request.PostAtorDto

@{
    ViewData["Title"] = "Adicionar Ator";
}

<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1 class="text-center text-light">Criar novo ator</h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NomeCompleto" class="control-label text-light">Nome</label>
                        <input asp-for="NomeCompleto" class="form-control" />
                        <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label text-light">Biografia</label>
                        <input asp-for="Bio" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoPerfilURL" class="control-label text-light">Foto</label>
                        <input asp-for="FotoPerfilURL" class="form-control" />
                        <span asp-validation-for="FotoPerfilURL" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-primary" asp-action="Index">Listar Todos</a>
                    </div>
                    
                </form>
                </div>
            </div>
        </div>
    </div>
</div>


