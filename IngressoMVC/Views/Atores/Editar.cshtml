@model IngressoMVC.Models.Ator

@{
    ViewData["Title"] = "Editar Ator";
}

<h1>Editar Ator</h1>

<h4>Ator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">            
            <input type="hidden" asp-for="Id" />
            <div>
                <img class="img-thumbnail" src="@Model.FotoPerfilURL" />
            </div>
            <div class="form-group">
                <label asp-for="NomeCompleto" class="control-label"></label>
                <input asp-for="NomeCompleto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FotoPerfilURL" class="control-label"></label>
                <input asp-for="FotoPerfilURL" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista de Atores</a>
</div>