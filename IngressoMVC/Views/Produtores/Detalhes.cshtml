@model IngressoMVC.Models.ViewModels.ResponseDTO.GetProdutoresDTO

        <h1 class="text-center text-light">@Model.NomeCompleto</h1>
    <div class="row">
        <div class="col-md-2">
            <img  class="img-thumbnail" src="@Model.FotoPerfilURL" alt="Foto do @Model.NomeCompleto" /> 
        </div>
        <div class="col-md-10">
            <p class="text-light">@Model.Bio</p>
        </div>


    </div>

if(model.FotoURLFilmes.Count > 0){
   @* Carrossel *@
   
    <div class="row">
        <div id="carouselExampleFade" class="carousel slide col-md-4 offset-md-4" data-ride="carousel">
          
                @foreach (var Filme in Model.FotoFilmelURL)
                {
                    if (Filme == Model.FotoFilmelURL.First())
                    {
                        <div class="carousel-item active">
                        <img src="@Filme" class="d-block w-100" alt="...">
                        </div>
                    }

                     else{
                    <div class="carousel-item">
                        <img src="@Filme" class="d-block w-100" alt="...">
                    </div>
                    } 
                }
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleFade" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleFade" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>        
    </div>
   @* Fim Carrossel*@
}

else{
    <h1 class="text-danger">Não Há Filmes para @Model.NomeCompleto</h1>
}