
@model Categoria

@{
 ViewData["Title"] = "Deletar Categoria";
}


<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1 class="text-center">Deletar Categoria</h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="ConfirmarDeletar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome da categoria</label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ConfirmarDeletar" class="btn btn-outline-danger float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>