@model IngressoMVC.Models.ViewModels.Request.PostCinemaDTO

@{
    ViewData["Title"] = "Adicionar Cinema";
}

<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1 class="text-center">Cadastrar Cinema</h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Cadastrar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label">Descricao</label>
                        <input asp-for="Descricao" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoURL" class="control-label">Logo</label>
                        <input asp-for="LogoURL" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
