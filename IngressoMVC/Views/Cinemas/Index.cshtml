@model IEnumerable<Cinema>

@{
 ViewData["Title"] = "Índice Cinemas";
}

<div class="container">

    <div class="row">

        <h1 class="text-center col-md-12 text-light">
           Cinema - <a asp-action="Cadastrar" class="btn btn-dark">Cadastrar</a>
        </h1>

        <div class="col-md-10 offset-md-1">



            <div class="input-group my-2">
                <input type="text" name="nome" id="" placeholder="Buscar..." class="form-control " aria-label="Dollar amount (with dot and two decimal places)">
                <span class="input-group-text ml-1"><i class="fa-solid fa-magnifying-glass"></i></span>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-light">Ações</th>
                        <th class="text-light">@Html.DisplayNameFor(Model => Model.LogoURL)</th>
                        <th class="text-light">@Html.DisplayNameFor(Model => Model.Nome)</th>
                        <th class="text-light">@Html.DisplayNameFor(Model => Model.Descricao)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cinema in Model)
                    {

                        <tr>
                            <td class="align-middle">
                                <div class="d-flex flex-column">
                                    <a asp-action="Editar" asp-route-id="@cinema.Id" class="btn btn-success mt-1"><i class="fa-solid fa-pen-to-square"></i>Editar</a>
                                    <a asp-action="Detalhes" asp-route-id="@cinema.Id" class="btn btn-primary mt-1"><i class="fa-solid fa-eye"></i>Ver</a>
                                    <a asp-action="Deletar" asp-route-id="@cinema.Id" class="btn btn-danger mt-1"><i class="fa-solid fa-trash"></i>Excluir</a>

                                </div>
                            </td>
                            <td class="align-middle">
                                <img src="@cinema.LogoURL" style="max-width:120px" alt="Foto do @cinema.Nome">
                            </td>
                            <td class="align-middle text-light">@cinema.Nome</td>
                            <td class="align-middle text-light">@cinema.Descricao</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>